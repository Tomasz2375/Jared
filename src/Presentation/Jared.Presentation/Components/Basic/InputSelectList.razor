@inherits InputBase<TKey>
@typeparam TKey

<div class="input-field">
    @if (!string.IsNullOrWhiteSpace(Label))
    {
        <label class="form-control-label" for="@($"label-{Id}")">@Label</label>
    }
    <select disabled=@Disabled class="form-control @CssClass" id="@Id" @bind="@CurrentValue">
        <i class="oi oi-arrow-left" />
        <option value=@(default(TKey))></option>
        @foreach (var item in Items)
        {
            <option value="@item.Key">@item.Value</option>
        }
    </select>
    <div class="form-control-validation">
        <ValidationMessage For="@ValidationFor" />
    </div>
</div>

<style>
    .input-field {
        margin: 0.3rem !important
    }
</style>
